.container{
    display: inline-flex;
    flex-direction: row;
    height: 60rpx;

}

.index-container{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.index-container .plain{
    font-size: 32rpx;
}

.index-container .index{
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: 800;
    margin-left: 14rpx;
}

.index-container .line{
    height: 44rpx;
    margin-right: 14rpx;
    border-left: 1px solid black;
}

.date-container{
    display: flex;
    flex-direction: column;
    margin-top: 6rpx;
    align-items: center;
}

.date-container .month{
    font-size: 24rpx;
    line-height: 24rpx;
}

.date-container .year{
    font-size: 20rpx;
}

